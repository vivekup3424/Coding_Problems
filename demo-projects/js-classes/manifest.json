{
    "id": "kiotp.plugins.default.helloworld",
    "version": "1.0.0",
    "name": "PLUGIN_HELLOWORLD",
    "displayName": "Hello World",
    "description": "A simple hello world plugin demonstrating multiple services",
    "pluginVersion": "1.0.0",
    "type": "SERVICE_PLUGIN",
    "categories": [
        "demo",
        "example"
    ],
    "pluginCategories": [
        "default"
    ],
    "tags": [
        "demo",
        "example",
        "hello-world",
        "tutorial"
    ],
    "license": "Apache-2.0",
    "maintainers": [
        {
            "name": "Keus Automation",
            "email": "",
            "url": ""
        }
    ],
    "containerImage": {
        "image": "kiotp_plugin_helloworld:latest",
        "containerConfig": {
            "allowHostNetwork": false
        },
        "additionalContainers": []
    },
    "metadata": {},
    "services": {
        "PluginServiceA": {
            "serviceVersion": "1.0.0",
            "serviceType": "SERVICE_PLUGIN",
            "dependencies": {
                "platformServices": [],
                "pluginServices": []
            },
            "containerConfig": {
                "allowHostNetwork": false
            },
            "additionalContainers": []
        },
        "PluginServiceB": {
            "serviceVersion": "1.0.0",
            "serviceType": "SERVICE_PLUGIN",
            "dependencies": {
                "platformServices": [],
                "pluginServices": []
            },
            "containerConfig": {
                "allowHostNetwork": false
            },
            "additionalContainers": [],
            "facts": [
                {
                    "factName": "appletv-playing-state",
                    "factAction": "GetPlayFactState",
                    "possibleFactValues": [
                        "PLAYING",
                        "PAUSED",
                        "STOPPED"
                    ],
                    "params": {
                        "id": "string"
                    },
                    "validOperations": [
                        "equal",
                        "notEqual",
                        "greaterThan",
                        "greaterThanInclusive",
                        "lessThan",
                        "lessThanInclusive"
                    ]
                },
                {
                    "factName": "appletv-volume-change",
                    "factAction": "GetVolumeFactState",
                    "possibleFactValues": [
                        "VOLUME_UP",
                        "VOLUME_DOWN"
                    ],
                    "params": {
                        "id": "string"
                    },
                    "validOperations": [
                        "equal",
                        "notEqual",
                        "greaterThan",
                        "greaterThanInclusive",
                        "lessThan",
                        "lessThanInclusive"
                    ]
                }
            ],
            "tasks": [
                {
                    "taskName": "appletv-play",
                    "taskType": "channel",
                    "taskAction": "p1.trigger-appletv-playing-state-change",
                    "params": {
                        "id": "string",
                        "value": "string"
                    },
                    "possibleTaskValues": [
                        "PLAYING",
                        "PAUSED",
                        "STOPPED"
                    ],
                    "validOperations": [
                        "equal",
                        "notEqual",
                        "greaterThan",
                        "greaterThanInclusive",
                        "lessThan",
                        "lessThanInclusive"
                    ]
                }
            ]
        }
    },
    "deployment": {
        "groupName": "hello-world",
        "strategy": {
            "allowInterDeployment": false,
            "allowIntraDeployment": true,
            "preferredNodes": [],
            "scalability": {
                "maxInstances": 1,
                "minInstances": 1
            }
        }
    },
    "security": {}
}
